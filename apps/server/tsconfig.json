{
    "compilerOptions": {
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "reflection": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
